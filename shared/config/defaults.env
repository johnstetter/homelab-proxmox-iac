# Default Configuration for K8S Infrastructure Project
# This file contains default values that can be overridden by environment variables

# Proxmox Configuration
PROXMOX_HOST="${PROXMOX_HOST:-core}"
PROXMOX_USER="${PROXMOX_USER:-root}"
PROXMOX_NODE="${PROXMOX_NODE:-core}"

# Network Configuration
NETWORK_BRIDGE="${NETWORK_BRIDGE:-vmbr0}"
BRIDGE="${BRIDGE:-vmbr0}"  # Alias for backward compatibility
NETWORK_GATEWAY="${NETWORK_GATEWAY:-192.168.1.1}"
NETWORK_CIDR="${NETWORK_CIDR:-24}"
NAMESERVER="${NAMESERVER:-192.168.1.4}"

# Storage Configuration
STORAGE_POOL="${STORAGE_POOL:-local-lvm}"
STORAGE="${STORAGE:-local-lvm}"  # Alias for backward compatibility
ISO_STORAGE="${ISO_STORAGE:-local}"

# Template Configuration
TEMPLATE_ID_BASE="${TEMPLATE_ID_BASE:-9000}"
UBUNTU_TEMPLATE_NAME="${UBUNTU_TEMPLATE_NAME:-ubuntu-25.04-cloud-init}"
NIXOS_TEMPLATE_NAME="${NIXOS_TEMPLATE_NAME:-nixos-base-template}"

# Build Configuration
BUILD_PARALLELISM="${BUILD_PARALLELISM:-2}"
LOG_LEVEL="${LOG_LEVEL:-INFO}"

# Environment Settings
DEFAULT_ENVIRONMENT="${DEFAULT_ENVIRONMENT:-dev}"

# SSH Configuration
SSH_USER_UBUNTU="${SSH_USER_UBUNTU:-ubuntu}"
SSH_USER_NIXOS="${SSH_USER_NIXOS:-nixos}"

# Terraform Configuration
TF_PLUGIN_CACHE_DIR="${TF_PLUGIN_CACHE_DIR:-${HOME}/.terraform.d/plugin-cache}"

# Colors for output (if terminal supports them)
if [[ -t 1 ]] && command -v tput >/dev/null 2>&1; then
    RED='\033[0;31m'
    GREEN='\033[0;32m'
    YELLOW='\033[1;33m'
    BLUE='\033[0;34m'
    NC='\033[0m' # No Color
else
    RED=''
    GREEN=''
    YELLOW=''
    BLUE=''
    NC=''
fi