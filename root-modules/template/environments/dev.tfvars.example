# Template Project - Development Environment
# Copy this file to dev.tfvars and customize for your project

# Environment
environment = "dev"

# Proxmox Provider Configuration
proxmox_api_url          = "https://192.168.1.100:8006/api2/json"
proxmox_username         = ""  # Leave empty to use API tokens
proxmox_password         = ""  # Leave empty to use API tokens
proxmox_api_token_id     = "root@pam!terraform"  
proxmox_api_token_secret = "your-api-token-secret-here"
proxmox_tls_insecure     = true
proxmox_parallel         = 2
proxmox_timeout          = 300
proxmox_debug            = false

# Proxmox Infrastructure
proxmox_node = "pve"
vm_template  = "your-template-name"
disk_storage = "local-zfs"

# Network Configuration
network_bridge  = "vmbr0"
network_vlan    = null  # No VLAN tagging
network_cidr    = "24"
network_gateway = "192.168.1.1"
nameserver      = "8.8.8.8"

# SSH Configuration
ssh_user = "ubuntu"

